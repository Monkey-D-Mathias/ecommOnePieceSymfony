{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
{% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-sm btn-secondary" href="{{ path('app_user_index') }}"> Retour</a>
{% endif %}
    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ user.deletedAt ? user.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    {% endif %}

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_logout') }}" class="btn btn-danger  mt-2">DÃ©connexion</a>
    {% endif %}
{% endblock %}
