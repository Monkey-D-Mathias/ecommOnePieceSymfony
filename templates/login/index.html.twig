{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block content %}
    {% if error is defined and error is not null %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container mt-5"> 
        <form action="{{ path('app_login') }}" method="post" class="text-start card py-5 px-5 shadow">
            <h1 class="mb-5 text-center">Connectez vous</h1>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="mb-3">
                <label for="username" class="form-label">E-mail:</label>
                <input id="username" class="form-control" name="_username" type="email" value="{{ username }}">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" >Password:</label>
                <input id="password"  class="form-control" name="_password" type="password">
            </div>

            <button type="submit" class="btn btn-primary mt-3">Connecter</button>
            <p>Vous n'avez pas encore de compte <a href="{{path('app_register')}}">inscrivez-vous</a></p>
        </form>
    </div>
{% endblock %}
