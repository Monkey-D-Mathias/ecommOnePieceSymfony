{% extends 'base.html.twig' %}

{% block title %}SalesOrder index{% endblock %}

{% block body %}
    <h1>SalesOrder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total</th>
                <th>CreatedAt</th>
                <th>Recipient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sales_order in sales_orders %}
            <tr>
                <td>{{ sales_order.id }}</td>
                <td>{{ sales_order.total }}</td>
                <td>{{ sales_order.createdAt ? sales_order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sales_order.recipient }}</td>
                <td>
                    <a href="{{ path('app_sales_order_show', {'id': sales_order.id}) }}">show</a>
                    <a href="{{ path('app_sales_order_edit', {'id': sales_order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sales_order_new') }}">Create new</a>
{% endblock %}
