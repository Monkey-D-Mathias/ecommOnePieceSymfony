{% extends '/admin/base.html.twig' %}
{% block title %}Product{% endblock %}

{% block content %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price_ht</th>
                <td>{{ product.priceHt }}</td>
            </tr>
            <tr>
                <th>Stock</th>
